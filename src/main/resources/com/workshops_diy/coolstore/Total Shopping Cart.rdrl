package com.workshops_diy.coolstore;

import java.lang.Number;

rule "Total Shopping Cart"
	dialect "mvel"
	no-loop true
	ruleflow-group "total-rules"
	when
		$sc : ShoppingCart( )
	then
		modify( $sc ) {
				setCartTotal( 0.0 ), 
				setCartItemPromoSavings( ($sc.carItemPromoSavings == 0.0)? 0.0 : $sc.cartItemPromoSavings * -1 )
		}
end
